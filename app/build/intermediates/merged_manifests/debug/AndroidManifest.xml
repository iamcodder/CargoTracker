<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.patronusstudio.cargotracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.patronusstudio.cargotracker.Fragment.CargoDetailLoad"
            android:theme="@style/TransparentCompat" />
        <activity
            android:name="com.patronusstudio.cargotracker.Fragment.CargoDetail"
            android:theme="@style/TransparentCompat" />
        <activity
            android:name="com.patronusstudio.cargotracker.Fragment.ProfileLoad"
            android:theme="@style/TransparentCompat" />
        <activity android:name="com.patronusstudio.cargotracker.Activity.UserHome" />
        <activity
            android:name="com.patronusstudio.cargotracker.Activity.UserLoginActivity"
            android:theme="@style/TransparentCompat" />
        <activity android:name="com.patronusstudio.cargotracker.Activity.LoadUserActivity" />
        <activity
            android:name="com.patronusstudio.cargotracker.Activity.CargoReceiver"
            android:theme="@style/TransparentCompat" />
        <activity
            android:name="com.patronusstudio.cargotracker.Activity.CargoSender"
            android:theme="@style/TransparentCompat" />
        <activity
            android:name="com.patronusstudio.cargotracker.Activity.CargoInfo"
            android:theme="@style/TransparentCompat" />
        <activity android:name="com.patronusstudio.cargotracker.Activity.CargoMain" />
        <activity
            android:name="com.patronusstudio.cargotracker.Activity.CargoTimeline"
            android:theme="@style/TransparentCompat" />
        <activity
            android:name="com.patronusstudio.cargotracker.Activity.LoadCargoActivity"
            android:theme="@style/TransparentCompat" />
        <activity android:name="com.patronusstudio.cargotracker.Activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>